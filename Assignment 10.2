name = input("Enter file:")
if len(name) < 1 : name = "mbox-short.txt"
handle = open(name)
dicc=dict()
for lines in handle:
    if lines.startswith("From"):
        words = lines.rstrip().split()
        #print(words)
        if len(words) >= 5:
            hours = words[5]
            hour = hours.split(":")
            #print(hour)
            h = hour[0]
            #print(h)
            dicc[h] = dicc.get(h,0) + 1
